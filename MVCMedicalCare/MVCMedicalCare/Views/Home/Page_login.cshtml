
@{
    ViewBag.Title = "Welcome Login";
    Layout = "~/Views/Shared/Default.cshtml";
}

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
	<div class="container">
        <h1 class="color-green pull-left">Login</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="../Home">Home</a> <span class="divider">/</span></li>
            <li class="active">Login</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->

<!--=== Content Part ===-->
<div class="container">		
	<div class="row-fluid">
        @using (Html.BeginForm("Login","Home",FormMethod.Post))
        {
        <div class="log-page">
          <h3>Login to your account</h3>   
            <p style="text-align:center; color:red">@TempData["Eror"]</p> 
            <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                <input class="input-xlarge" type="text" placeholder="Username" name="username" />
            </div>
            <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                <input class="input-xlarge" type="password" placeholder="Password" name="pass" />
            </div>
            <div class="controls form-inline">
                <label class="checkbox"><input type="checkbox" /> Stay Signed in</label>
                <button class="btn-u pull-right" type="submit">Login</button>
            </div>
            <hr />
            <h4>Forget your Password ?</h4>
            <p>No worries, <a class="color-green" href="#">click here</a> to reset your password.</p>
        </div>
        }
    </div><!--/row-fluid-->
</div><!--/container-->		
<!--=== End Content Part ===-->